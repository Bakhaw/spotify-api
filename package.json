        "watch:dev": "nodemon"
    },
    "dependencies": {
        "@babel/cli": "^7.21.0",
        "axios": "^0.21.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "esm": "^3.2.25",
        "express": "^4.17.1",
