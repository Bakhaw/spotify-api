        "npm-run-all": "^4.1.5",
        "querystring": "^0.2.1",
        "request": "^2.88.2",
        "rimraf": "^5.0.0",
        "serverless-http": "^3.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/node": "^7.12.10",
        "@babel/preset-env": "^7.21.4"
    },
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "server/*",
            "public/*"
        ],
        "ignore": [
            "**/__tests__/**",
            "*.test.js",
            "*.spec.js"
        ]
    }
}